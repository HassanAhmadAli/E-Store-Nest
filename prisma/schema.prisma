generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

// Enums match the actors and states in the diagram
enum Role {
  Admin
  Citizen
  Employee
}

model Complaint {
  id                 Int             @id @default(autoincrement())
  title              String
  description        String
  status             ComplaintStatus @default(Pending)
  isArchived         Boolean         @default(false)
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt

  citizenId          Int
  assignedEmployeeId Int?

  citizen            User            @relation("CitizenComplaints", fields: [citizenId], references: [id])
  assignedEmployee   User?           @relation("EmployeeComplaints", fields: [assignedEmployeeId], references: [id])
  logs               ComplaintLog[]
  notifications      Notification[]
  attachments        Attachment[]
}

model Attachment {
  id          Int       @id @default(autoincrement())
  fileUrl     String
  fileType    String
  complaintId Int
  complaint   Complaint @relation(fields: [complaintId], references: [id])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum ComplaintStatus {
  Pending
  InProgress
  Resolved
  Rejected
}

model User {
  id                 Int            @id @default(autoincrement())
  fullName           String
  email              String         @unique
  phoneNumber        String
  password           String
  national_id        String         @unique
  role               Role
  isActive           Boolean        @default(true)

  complaintsFiled    Complaint[]    @relation("CitizenComplaints")
  complaintsAssigned Complaint[]    @relation("EmployeeComplaints")
  logsCreated        ComplaintLog[] // Tracks who updated a complaint status
  notifications      Notification[]
  otps               OTPCode[]

  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
}

model ComplaintLog {
  id             Int             @id @default(autoincrement())
  previousStatus ComplaintStatus
  newStatus      ComplaintStatus
  notes          String?

  complaintId    Int
  changedById    Int

  complaint      Complaint       @relation(fields: [complaintId], references: [id])
  changedBy      User            @relation(fields: [changedById], references: [id])

  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Notification {
  id          Int        @id @default(autoincrement())
  message     String
  isRead      Boolean    @default(false)

  userId      Int
  complaintId Int?

  user        User       @relation(fields: [userId], references: [id])
  complaint   Complaint? @relation(fields: [complaintId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model OTPCode {
  id         Int      @id @default(autoincrement())
  identifier String // Email or Phone 
  code       String
  expiresAt  DateTime
  isVerified Boolean  @default(false)

  userId     Int?
  user       User?    @relation(fields: [userId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt


  @@index([identifier])
}
