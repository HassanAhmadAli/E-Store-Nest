generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id    Int    @id @default(autoincrement())
  name  String
  brand String

  @@index([name, brand(sort: Desc)])
}

enum Roles {
  Admin
  Regular
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  role     Roles     @default(Regular)
  Comment  Comment[] // auto added
}

model Geo {
  id  Int    @id @default(autoincrement())
  lat String
  lng String
}

model Address {
  id      Int    @id @default(autoincrement())
  street  String
  suite   String
  city    String
  zipcode String
}

model Comment {
  id          Int      @id @default(autoincrement())
  text        String
  commenter   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date        DateTime @default(now())
  email       String
  subComments Int[] //this one should be linked to the comment model itself
  userId      Int
}
